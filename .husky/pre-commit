#!/bin/sh

# Simple pre-commit hook that works on Windows
# Try different ways to run npx lint-staged
if command -v npx >/dev/null 2>&1; then
    npx lint-staged
elif command -v npx.cmd >/dev/null 2>&1; then
    npx.cmd lint-staged
else
    echo "Warning: npx not found, skipping lint-staged"
    exit 0
fi